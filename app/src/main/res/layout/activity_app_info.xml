<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/myButton"
            android:onClick="installApp"
            android:text="安装apk" />

        <Button
            style="@style/myButton"
            android:onClick="uninstallApp"
            android:text="卸载app" />

        <Button
            style="@style/myButton"
            android:onClick="relaunchApp"
            android:text="relaunchApp" />

        <!-- <Button
             style="@style/myButton"
             android:onClick="exitApp"
             android:text="exitApp" />-->

        <Button
            style="@style/myButton"
            android:onClick="getAppInfo"
            android:text="getAppInfo" />

        <Button
            style="@style/myButton"
            android:onClick="getAppsInfo"
            android:text="getAppsInfo获取所有的应用信息列表" />

        <Button
            style="@style/myButton"
            android:onClick="getApkInfo"
            android:text="getApkInfo" />

        <Button
            style="@style/myButton"
            android:onClick="getAppSignature"
            android:text="getAppSignature" />

        <Button
            style="@style/myButton"
            android:onClick="getAppSignatureMD5"
            android:text="getAppSignatureMD5" />

        <Button
            style="@style/myButton"
            android:onClick="getAppSignatureSHA1"
            android:text="getAppSignatureSHA1" />

        <Button
            style="@style/myButton"
            android:onClick="getAppSignatureSHA256"
            android:text="getAppSignatureSHA256" />

    </LinearLayout>

</ScrollView>